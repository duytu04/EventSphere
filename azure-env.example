# Azure Deployment Environment Variables
# Copy this file to .env.azure and update with your values

# Azure Configuration
AZURE_RESOURCE_GROUP=eventsphere-rg
AZURE_LOCATION=East US 2
AZURE_ENVIRONMENT=dev
AZURE_APP_NAME_PREFIX=eventsphere

# Supported Azure Static Web Apps Regions:
# - West US 2
# - Central US
# - East US 2
# - West Europe
# - East Asia

# Database Configuration
MYSQL_ADMIN_LOGIN=eventsphereadmin
MYSQL_ADMIN_PASSWORD=your_secure_mysql_password_here

# JWT Configuration (minimum 32 characters)
JWT_SECRET=your_super_secret_jwt_key_for_azure_production_2024

# Email Configuration (Optional)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password_here

# Frontend Configuration (will be set automatically)
VITE_API_BASE_URL=https://eventsphere-backend.azurewebsites.net
VITE_WS_URL=wss://eventsphere-backend.azurewebsites.net/ws
